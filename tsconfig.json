{
  "compilerOptions": {
    "target": "ES2022",               // Modern JavaScript output
    "lib": ["ES2016", "ES2017", "DOM"],
    "module": "ESNext",                // Support for ES Modules
    "moduleResolution": "node",        // Resolve modules like Node.js
    "strict": true,                    // Enables strict type checking
    "esModuleInterop": true,           // Enable interop for CommonJS/ES modules
    "resolveJsonModule": true,         // Allow importing JSON files as modules
    "declaration": true,               // Generate .d.ts declaration files
    "noImplicitAny": false,            // Allows implicit `any` type, but can be removed later
    "outDir": "./dist",                // Output directory for compiled code
    "rootDir": "source",                // The root directory for source files
    "jsx": "react",                    // Support for JSX syntax (adjust if not needed)
    "types": ["svelte", "node"],       // Types for Svelte (if using Svelte)
    "skipLibCheck": true,              // Skip type checking of declaration files (speeds up compilation)
    "allowJs": true                    // Allow JavaScript files to be imported
  },
  "exclude": [
    "node_modules",                     // Exclude node_modules
    "dist",                             // Exclude the build directory
    "**/*.spec.ts", "**/*.test.ts",     // Exclude test files
    "source/provider/**/*"                      // Exclude src/provider directory
  ],
  "include": [
    "source/**/*.ts"                       // Include all TypeScript files in the 'src' directory
  ]
}
